<!DOCTYPE html>
<html>
  <head>
    <title>ArtistsAgora</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">


    <h1>Artist's Agora</h1></br>
    <% if user_signed_in? %>
      <%= image_tag current_user.image, size: "70x70" %>
      <p><%= current_user.name %></p>
    <% end %>

        <ul class="navbar-nav ml-auto">
          <% if admin_signed_in? %>
              <div class="search_form">
                <%= form_with url: admin_search_path, local: true, method: :get do |f| %>
                  <%= f.text_field :word %>
                  <%= f.select :range, options_for_select([['ユーザー'], ['作品']]) %>
                  <%= f.select :search, options_for_select([["完全一致","perfect_match"],["部分一致","partial_match"]]) %>
                  <%= f.submit "検索", class: "btn btn-primary" %>
                <% end %>
              </div>
            <li  class="nav-item"> <%= link_to"トップ",admin_admin_path, class: "nav-link" %> </li>
            <li  class="nav-item"> <%= link_to"通報一覧",admin_reports_path, class: "nav-link" %> </li>
            <li  class="nav-item"> <%= link_to"タイムライン", admin_works_path, class: "nav-link" %> </li>
            <li  class="nav-item"> <%= link_to"ログアウト", destroy_admin_session_path,method: :delete, class: "nav-link" %> </li>

          <% elsif user_signed_in? %>
              <div class="search_form">
                <%= form_with url: search_path, local: true, method: :get do |f| %>
                  <%= f.text_field :word %>
                  <%= f.select :range, options_for_select([['ユーザー'], ['作品']]) %>
                  <%= f.select :search, options_for_select([["完全一致","perfect_match"],["部分一致","partial_match"]]) %>
                  <%= f.submit "検索", class: "btn btn-primary" %>
                <% end %>
              </div>

            <li  class="nav-item"> <%= link_to"タイムライン", works_path, class: "nav-link" %> </li>
            <li  class="nav-item"> <%= link_to"ランキング", ranks_path, class: "nav-link" %> </li>
            <li  class="nav-item"> <%= link_to"新規投稿", new_work_path, class: "nav-link" %> </li>
            <li  class="nav-item"> <%= link_to"マイページ", user_path(current_user), class: "nav-link" %> </li>
            <li  class="nav-item"> <%= link_to"ログアウト",  destroy_user_session_path,method: :delete, class: "nav-link" %> </li>

          <% else %>
            <li  class="nav-item"> <%= link_to"ログイン",new_user_session_path, class: "nav-link" %> </li>

          <% end %>

        </ul>
      </div>
    </nav>
  <%= yield %>

  </body>
</html>
