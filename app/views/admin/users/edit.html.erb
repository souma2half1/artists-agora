<div class="container mt-5">
  <div class="row">
    <div class="col-12">

        <h2>ユーザー情報編集</h2>
        <%= image_tag @user.image , size: "200x200"%>
        <table class="mt-3">
        <tbody>

          <%= form_with model:@user,url: admin_user_path,method: :patch, id: "patch" do |f| %>
              <tr>
               <td><%= f.label :"プロフィール画像" %></td>
               <td><%= f.file_field :image, accept: "image/*" , class: "form-controll" %></td>
              </tr>

              <tr>
                <td><%= f.label :"ユーザー名" %></td>
                <td><%= f.text_field :name %></td>
              </tr>

              <tr>
                <td><%= f.label :"自己紹介" %></td>
                <td><%= f.text_area :introduction,size: "30x5" %></td>
              </tr>

              <tr>
                <td><%= f.label :"メールアドレス" %></td>
                <td><%= f.text_area :email %></td>
              </tr>

              <tr>
                <td><%= f.submit '変更を保存',form: "patch", class: "btn btn-primary mt-3 mb-3" %></td>
              </tr>

              <% end %>

          </tbody>
          </table>

          <button type="button" class="btn btn-danger">
            <%= link_to "アカウントを削除", admin_unsubscribe_path %>
          </button>

   </div>
  </div>
 </div>