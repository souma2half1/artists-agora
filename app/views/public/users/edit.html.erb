<div class="container mt-5">
  <div class="row">
    <div class="col-12">

      <div class = "m-3">
        <h2 class"mb-3"><i class="fa-sharp fa-solid fa-user-pen"></i>マイページ編集</h2>
        <table class="table">
        <tbody>

          <%= form_with model:@user,url: user_path(@user),method: :patch, id: "patch" do |f| %>

           <div class="m-3">
              <%= f.label :image, "プロフィール画像：" %></br>
              <%= f.file_field :image, accept: "image/*" , class: "form-controll" %>
            </div>
            <div class="m-3">
              <%= f.label :name, "ユーザー名：" %></br>
              <%= f.text_field :name %>
            </div>
            <div class="m-3">
              <%= f.label :introduction, "自己紹介：" %></br>
              <%= f.text_area :introduction,size: "30x5" %>
            </div>
            <div class="m-3">
              <%= f.label :email, "メールアドレス：" %></br>
              <%= f.text_area :email %>
            </div>
            <div class="m-3">
              <%= f.submit '変更を保存',form: "patch", class: "btn btn-primary mt-3 mb-3" %>
            </div>

          <% end %>

          </tbody>
          </table>

          <button type="button" class="btn btn-danger mb-2">
            <%= link_to "アカウントを削除",unsubscribe_path(id: @user.id) %>
          </button>
          <hr>


        <%= render 'common/latest_post' ,works: @works %>
   </div>
  </div>
 </div>