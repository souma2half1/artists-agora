<div class="container mt-5">
  <div class="row">
    <div class="col-6">

      <div class = "m-3">
        <h2>マイページ編集</h2>
      </div>

      <div class = "m-5">
        <%= form_with model:@user,url: user_path,method: :patch do |f| %>

          <%= f.label :"プロフィール画像" %>
          <%= f.file_field :image, accept: "image/*" , class: "form-controll" %></br>

          <%= f.label :"ユーザー名" %>
          <%= f.text_field :name %></br>

          <%= f.label :"自己紹介" %>
          <%= f.text_area :introduction %></br>

          <%= f.label :"メールアドレス" %>
          <%= f.text_area :email %></br>

          <%= f.submit '変更を保存',class: "btn btn-primary mt-3 mb-3" %></br>

        <% end %>

        <%= link_to "アカウントを削除",unsubscribe_path %></br>

      </div>

        <%= render 'common/latest_post' ,works: @works %>
   </div>
  </div>
 </div>