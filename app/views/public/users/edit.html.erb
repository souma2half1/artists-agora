<div class="container mt-5">
  <div class="row">
    <div class="col-12">
      <div class="m-3">
        <h2 class="mb-3"><i class="fa-sharp fa-solid fa-user-pen"></i>マイページ編集</h2>
          <%= form_with model: @user do |f| %>
           <div class="m-3">
              <%= f.label :image, "プロフィール画像：" %><br/>
              <%= f.file_field :image, accept: "image/*" , class: "form-controll" %>
            </div>
            <div class="m-3">
              <%= f.label :name, "ユーザー名：" %><br/>
              <%= f.text_field :name %>
            </div>
            <div class="m-3">
              <%= f.label :introduction, "自己紹介：" %><br/>
              <%= f.text_area :introduction,size: "30x5" %>
            </div>
            <div class="m-3">
              <%= f.label :email, "メールアドレス：" %><br/>
              <%= f.text_area :email %>
            </div>
            <div class="m-3">
              <%= f.submit '変更を保存', class: "btn btn-primary mt-3 mb-3" %>
            </div>
          <% end %>
            <%= link_to "アカウントを削除",unsubscribe_path(id: @user.id),class:"btn btn-danger mb-2 ml-3" %>
      </div>
    </div>
 </div>