<div class="container mt-5">
  <div class="row">
    <div class="col-6">

<h>マイページ編集</h>

  <%= form_with model:@user,url: user_path,method: :patch do |f| %>

   プロフ編集</br>

    <%= f.label :"プロフィール画像" %>
    <%= f.file_field :image, accept: "image/*" , class: "form-controll" %></br>

    <%= f.label :"ユーザー名" %>
    <%= f.text_field :name %></br>

    <%= f.label :"自己紹介" %>
    <%= f.text_area :introduction %></br>

    <%= f.label :"メールアドレス" %>
    <%= f.text_area :email %></br>

    <%= f.submit '変更を保存' %></br>

  <% end %>

  <%= link_to "アカウントを削除",unsubscribe_path %></br>

  ＜最新投稿＞</br>
      <% @works.each do |work| %>

      <%= link_to work_path(work.id) do %>
      <%= image_tag work.image, size: "150x150" %>
      <% end %></br>

      <%= work.work %></br>

    <% end %>

    <%= paginate @works %>
   </div>
  </div>
 </div>