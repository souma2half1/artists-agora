<div class="card text-center m-auto" style="width: 30rem;">
  <h2>会員登録</h2>
    <%= form_with model: @user, url: user_registration_path do |f| %>
      <div class="form-group">
      <%= f.label :"プロフィール画像" %><br>
      <%= f.file_field :image, accept: "image/*" , class: "form-controll" %>
      </div>
      <div class="form-group">
      <%= f.label :"ユーザーネーム" %><br>
      <%= f.text_field :name, class: "form-controll" %>
      </div>
      <div class="form-group">
      <%= f.label :"メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true, class: "form-controll" %>
      </div>
      <div class="form-group">
      <%= f.label :"パスワード" %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "form-controll" %>
      </div>
      <div class="form-group">
        <%= f.label :"パスワード確認入力" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-controll" %>
      </div>
      <div>
        <%= f.submit "登録", class: "btn btn-primary" %>
      </div>
      <% end %>
      <%= render "public/shared/links" %>
</div>



