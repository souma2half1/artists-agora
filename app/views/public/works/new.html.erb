<div class="container mt-5">
 <div class="row">
  <div class="col-6">

 <h2>新規投稿</h2>

 <div>
  <%= form_with model:@work,url: works_path,method: :post do |f| %>

   <div class="field">
   <%= f.label :"作品" %><br>
   <%= f.file_field :image, accept: "image/*" %>
   </div>

   <div class="field">
   <%= f.label :"作品名" %><br>
   <%= f.text_field :work %>
   </div>

   <div class="field">
    <%= f.label :"ジャンル" %><br>
    <%= f.text_field :genre %>
   </div>

   <div class="field">
   <%= f.label :"作品説明" %><br>
   <%= f.text_area :introduction %>
   </div>

   <div class="actions">
   <%= f.submit "投稿" %>
   </div>

  <% end %>
 </div>

    </div>
   </div>
  </div>
