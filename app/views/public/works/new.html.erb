<div class="container mt-5">
 <div class="row">
  <div class="col-12">

    <h2 class="mb-3"><i class="fa-sharp fa-solid fa-file-export"></i>新規投稿</h2>

      <div>
       <%= form_with model:@work,url: works_path,method: :post do |f| %>

        <div class="field m-2">
         <%= f.label :"作品：" %><br>
         <%= f.file_field :image, accept: "image/*" %>
        </div>

        <div class="field m-2">
         <%= f.label :"作品名：" %><br>
         <%= f.text_field :work %>
        </div>

        <div class="field m-2">
         <%= f.label :"ジャンル：" %><br>
         <%= f.text_field :genre %>
        </div>

        <div class="field m-2">
         <%= f.label :"作品説明：" %><br>
         <%= f.text_area :introduction,size: "40x10" %>
        </div>

        <div class="actions mt-3 ">
          <%= f.submit "投稿", class: "btn btn-success" %>
        </div>

       <% end %>
      </div>

    </div>
   </div>
  </div>
