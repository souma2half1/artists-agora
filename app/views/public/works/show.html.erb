<div class="container mt-5">
  <div class="row">
    <div class="col-6">

     <h3>作品詳細</h3></br>

            ユーザー：
            <%= link_to user_path(@work.user.id) do %>
              <%= @work.user.name %></br>
            <% end %>


            <%= image_tag @work.image, class: 'work-image' %></br>

            作品名：<%= @work.work %></br>


             ジャンル：<%= @work.genre %></br>

             作品説明：<%= @work.introduction %></br>

             更新日：<%= @work.updated_at.strftime("%Y-%m-%D") %></br>


      <% if @work.user == current_user %>
       <button type="button" class="btn btn-success">
        <%= link_to "編集・削除",edit_work_path(@work) %></br>
       </button>
      <% end %>

      <button type="button" class="btn btn-info m-3">
        <%= link_to 'コメント', work_comments_path(@work.id), method: :get %>
      </button>


      <h4 class="mt-5 mb-3">最新コメント</h4>

      <% if @comments.count > 0 %>
        <div class="card-wrapper">
          <div class="d-block comment-card">
            <% @comments.each do |comment| %>
              <div class="text-center">
                <%= image_tag comment.user.image, size: "75x75" %>
              </div>
              <div class="text-center">
                <small><%= comment.user.name.truncate(14) %></small>
              </div>
              <hr>
              <%= comment.comment.truncate(14) %>
          </div>
        </div>


      <% if comment.user.id == current_user.id %>
        <button type="button" class="btn btn-warning mt-2">
           <%= link_to"削除",work_comment_path(@work.id,comment.id),method: :delete %>
         </button>
       <% else %>
          <button type="button" class="btn btn-danger mt-2">
            <%= link_to"報告", new_work_comment_report_path(@work,comment)  %>
          </button>
       <% end %>
      <% end %>

            <%= paginate @comments %>
      <% end %>

    </div>
   </div>
  </div>