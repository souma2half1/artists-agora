<div class="container mt-5">
 <div class="row">
  <div class= "col-12">
    <h3><i class="fa-solid fa-palette"></i>作品詳細</h3><br/>
    ユーザー：
    <%= link_to user_path(@work.user.id) do %>
      <%= @work.user.name %><br/>
    <% end %>
    <%= image_tag @work.image, class: 'work-image' %><br/>
    作品名：<%= @work.title %><br/>
    ジャンル：<%= @work.genre %><br/>
    作品説明：<%= @work.introduction %><br/>
    更新日：<%= @work.updated_at.strftime("%Y-%m-%D") %><br/>
    <% if current_user.is_guest? %>
      <% if @work.user == current_user %>
        <%= link_to "編集・削除",edit_work_path(@work),class:"btn btn-success mt-3" %><br/>
      <% end %>
      <%= link_to 'コメント', work_comments_path(@work.id), method: :get ,class:"btn btn-info mt-3"%>
      <hr>
    <% end %>
    <% if @comments.count > 0 %>
      <%= render 'common/comments', comments: @comments%>
    <% end %>
  </div>