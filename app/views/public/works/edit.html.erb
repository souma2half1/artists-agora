  <div class="container mt-5">
    <div class="row">
      <div class="col-6">

   <h3>作品編集</h3></br>

    <%= image_tag @work.image, size: "150x150" %>

    <%= form_with model:@work,url: work_path(@work.id),method: :patch do |f| %>

     <div class="field">
     <%= f.label :"作品画像" %><br>
     <%= f.file_field :image, accept: "image/*" %>
     </div>

     <div class="field">
     <%= f.label :"作品名" %><br>
     <%= f.text_field :work %>
     </div>

     <div class="field">
      <%= f.label :"ジャンル" %><br>
      <%= f.text_field :genre %>
     </div>

     <div class="field">
     <%= f.label :"作品説明" %><br>
     <%= f.text_area :introduction %>
     </div>

     <div class="actions">
     <%= f.submit "更新" %>
     </div>

    <% end %>

    <%= link_to "作品を削除する", work_path(@work.id),method: :delete %>

     </div>
    </div>
   </div>
