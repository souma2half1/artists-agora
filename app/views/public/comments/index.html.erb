 <div class="container mt-5">
   <div class="row">
     <div class="col-6">

     <h2>コメント一覧</h2></br>

      <div class="mt-3">


        <% if @comments.empty? %>

           ユーザー：<%= @work.user.name %></br>
          <%= image_tag @work.image, size: "200x200" %></br>

         <% else %>
          <% @comments.each do |comment| %>
           ユーザー：<%= comment.user.name %></br>
           <%= image_tag @work.image, size: "200x200" %></br>
           作品名：<%= comment.work.work %></br>
           ジャンル：<%= @work.genre %></br>
           作品説明：<%= @work.introduction %></br>
           更新日：<%= @work.updated_at.strftime("%Y-%m-%D") %></br>


      </div>


      <div class="comment-card mt-5 mb-2">
        <%= comment.user.name %><br>
        <%= image_tag comment.user.image, size: "75x75" %></br>
        <%= comment.comment %></br>
      </div>

      <div>
       <% if comment.user.id == current_user.id %>
        <button type="button" class="btn btn-warning">
          <%= link_to"コメントを削除",work_comment_path(@work.id,comment.id),method: :delete %>
        </button>
       <% else %>
        <%= link_to"報告",new_work_comment_report_path(@work, comment) %>
       <% end %>
      </div>
    <% end %>
    <% end %>

     <h3 class="mt-3">コメント</h3></br>
      <div>
        <%= form_with model:[@work,@comment],url: work_comments_path,method: :post do |f| %>

        <%= f.label :"コメントする" %></br>
        <%= f.text_area :comment,size: "30x10" %>

        <%= f.submit "投稿",class: "btn btn-success" %>
       <% end %>
      </div>


      <%= paginate @comments %>
     </div>
    </div>
   </div>