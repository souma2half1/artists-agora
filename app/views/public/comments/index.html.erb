 <div class="container mt-5">
   <div class="row">
     <div class="col-12">

     <h2>コメント一覧</h2></br>

      <div class="mt-3 d-flex">

        <div>
            ユーザー：<%= @work.user.name %></br>
           <%= image_tag @work.image, class: 'work-image' %></br>
            作品名：<%= @work.work %></br>
            ジャンル：<%= @work.genre %></br>
            作品説明：<%= @work.introduction %></br>
            更新日：<%= @work.updated_at.strftime("%Y-%m-%D") %></br>
        </div>


          <div class="ml-5">
            <%= form_with model:[@work,@comment],url: work_comments_path,method: :post do |f| %>

              <%= f.label :"コメント投稿" %></br>
              <%= f.text_area :comment,size: "30x10" %>

              <%= f.submit "投稿",class: "btn btn-success" %>

            <% end %>
          </div>

        </div>
      <hr>

     <% if @comments.count > 0 %>
       <%= render 'common/comments', comments: @comments%>
     <% end %>


      <%= paginate @comments %>
     </div>
    </div>
   </div>