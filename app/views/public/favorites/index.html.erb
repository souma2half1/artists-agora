  <div class="container mt-5">
    <div class="row">
      <div class="col-6">

       <h2>お気に入り投稿</h2>

            <ul class = "card-wrapper mt-3">
              <li class = "post-card" style="background-color: #CCE9FF">

                <% @works.each do |art| %>

                    ユーザー：<%= art.user.name.truncate(14) %></br>

                    <%= link_to work_path(art) do %>
                       <%= image_tag art.work.image, size: "200x200" %></br>
                    <% end %>

                    作品名：<%= art.work.work.truncate(14) %></br>

                    <% if user_signed_in? %>
                      <% if current_user.already_favorited?(art) %>
                        <%= link_to"❤", work_favorites_path(art), method: :delete %></br>
                      <% else %>
                        <%= link_to"♡", work_favorites_path(art), method: :post %>
                      <% end %>
                    <% end %>

                      <%= art.work.favorites.count %>いいね</br>

                     <% if art.work.genre.present? %>
                     ジャンル：<%= art.work.genre.truncate(14) %></br>
                     <% end %>

                <% end %>
              </li>
            </ul>
        <%= paginate @works %>
      </div>
    </div>
  </div>