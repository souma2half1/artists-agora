<div class="card text-center m-auto " style="width: 30rem;">

    <h2>ログイン</h2>
    <%= form_with model: @user, url: user_session_path do |f| %>
      <div class="form-group">
        <%= f.label :"メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-controll" %>
      </div>
      <div class="form-group">
        <%= f.label :"パスワード" %><br />
        <%= f.password_field :password, autocomplete: "current-password",class: "form-controll" %>
      </div>
      <div>
        <%= f.submit "ログイン",class: "btn btn-primary mb-3"  %>
      </div>
    <% end %>
      <%= render "public/shared/links" %>
    <div class="mt-2">
      <%= link_to"ゲストログインはこちら＞" , homes_guest_sign_in_path ,method: :post %>
    </div>

</div>

